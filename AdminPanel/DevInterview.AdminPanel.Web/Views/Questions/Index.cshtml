@model DevInterview.AdminPanel.Web.Models.QuestionsIndexViewModel

@{
    ViewData["Title"] = "Questions";
}

<div class="card">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <select id="subjectId" class="form-select" asp-for="SelectedSubjectId" onchange="FillTopics(this)">
                    <option value="-1">-- Select a Subject --</option>
                    @foreach (var subject in Model.SubjectList)
                    {
                        <option value="@subject.SubjectId" data="@subject.Name">@subject.Name</option>
                    }
                </select>

            </div>
            <div class="col">
                <select id="topicId" class="form-select" asp-for="SelectedTopicId" onchange="FillQuestions(this)">
                    <option value="-1">-- Select a Topic --</option>
                </select>
            </div>
            <div class="col">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addQuestionModal">Add Question</button>
            </div>
        </div>
        <hr />
        <table id="dataTable" class='table table-bordered'>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Los datos se llenarán aquí dinámicamente -->
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="addQuestionModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Add Question</h3>
                <button type="button" class="close" data-bs-dismiss="modal">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="saveForm">
                    <div class="mb-3">
                        <label class="form-label">Question</label>
                        <input asp-for="Question.QuestionText" id="questionText" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Answer</label>
                        <textarea asp-for="Question.AnswerText" id="answerText" class="form-control"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btnCancel" data-bs-dismiss="modal">Cancel</button>
                <button id="btnSave" class="btn btn-block btn-success">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteQuestionModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Delete Question</h3>
                <button type="button" class="close" data-bs-dismiss="modal">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this <strong>Question</strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btnCancel" data-bs-dismiss="modal">Cancel</button>
                <button id="btnDelete" class="btn btn-danger" data-bs-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="subjectIdHidden" />
<input type="hidden" id="topicIdHidden" />
<input type="hidden" id="questionIdHidden" />

<script>
    $(document).ready(function () {
        $("#btnSave").click(function () {
            var questionText = document.getElementById("questionText");
            var answerText = document.getElementById("answerText");
            var topicId = document.getElementById("topicIdHidden");

            var formData = new FormData();
            formData.append("questionText", questionText.value);
            formData.append("answerText", answerText.value);
            formData.append("topicId", topicId.value);

            $.ajax({
                type: "POST",
                url: "/Questions/Create",
                data: formData,
                processData: false,
                contentType: false,
                success: function () {
                    window.location.href = "/Questions/Index"
                }
            });
        });

        $("#btnDelete").click(function () {
            var id = $("#questionIdHidden").val();
            $.ajax({
                type: "POST",
                url: "/Questions/Delete",
                data: { id: id },
                success: function (result) {
                    if (result) {
                        $("#questionIdHidden").val(null);
                        window.location.href = "/Questions/Index";
                    } else {
                        alert("Opps something wrong");
                    }
                }
            });
        });

    });

    function FillTopics(listSubjectCtrl) {
        var topicList = $("#topicId");
        topicList.empty();
        topicList.append('<option value="-1">-- Select a Topic --</option>');

        var selectedSubject = listSubjectCtrl.options[listSubjectCtrl.selectedIndex].value;
        $("#subjectIdHidden").val(selectedSubject);

        if (selectedSubject != null && selectedSubject != '') {
            $.getJSON("/Topics/GetTopicsBySubject", { subjectId: selectedSubject }, function (topics) {
                if (topics != null && !jQuery.isEmptyObject(topics)) {
                    $.each(topics, function (index, topic) {
                        topicList.append($('<option/>', {
                            value: topic.value,
                            text: topic.text
                        }));
                    });
                }
            });
        }
        return;
    }

    function FillQuestions(listTopicCtrl) {
        var dataTable = $("#dataTable tbody");
        dataTable.empty();

        var subjectId = document.getElementById("subjectIdHidden").value;
        var selectedTopicId = listTopicCtrl.options[listTopicCtrl.selectedIndex].value;
        $("#topicIdHidden").val(selectedTopicId);


        $.getJSON("/Questions/GetQuestionsByTopic", { topicId: selectedTopicId }, function (data) {
            if (data != null && data.length > 0) {
                $.each(data, function (index, item) {
                    dataTable.append('<tr><td>' + item.questionText + '</td><td><a class="btn btn-sm btn-outline-dark" href="/Questions/Update?questionId=' + item.id + '&subjectId=' + subjectId + '">Edit</a> <a class="btn btn-sm btn-outline-danger" onclick="Confirm(\'' + item.id + '\')">Delete</a></td></tr>');
                });
            } else {
                dataTable.append('<tr><td colspan="2">No data available</td></tr>');
            }
        });
    }

    function Confirm (id) {
        $("#questionIdHidden").val(id);
        $("#deleteQuestionModal").modal('show');
    }
</script>