@model DevInterview.AdminPanel.Web.Models.CreateSubjectViewModel

@{
    ViewData["Title"] = "Create Subject";
}

<div class="card">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Subjects" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="Name" value="@Model.Name" type="text" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Image</label>
                <input type="file" name="image" accept="image/*" class="form-control" />
            </div>

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
                <div class="col text-end">
                    <a asp-action="Index" asp-controller="Subjects" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>