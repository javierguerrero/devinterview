@model DevInterview.AdminPanel.Web.Models.UpdateTopicViewModel
@{
    ViewData["Title"] = "Update Topic";
}

<div class="card">
    <div class="card-header">
        Create Topic
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="Topics" method="post">
            <input asp-for="Topic.Id" type="hidden" class="form-control" value="@Model.Topic.Id" />
            <div class="mb-3">
                <label class="form-label">Subject</label>
                <select class="form-control" asp-for="SelectedSubjectId">
                    @foreach (var item in Model.SubjectList)
                    {
                        <option value="@item.Id" data="@item.Name">@item.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="Topic.Name" type="text" class="form-control">
                <span asp-validation-for="Topic.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea asp-for="Topic.Description" class="form-control"></textarea>
                <span asp-validation-for="Topic.Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
                <div class="col text-end">
                    <a asp-action="Index" asp-controller="Topics" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>